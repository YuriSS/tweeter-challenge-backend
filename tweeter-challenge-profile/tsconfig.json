{
  "compilerOptions": {
    "incremental": true,
    "target": "es2017",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/@shared/*"
      ],
      "@profile/*": [
        "src/profile/*"
      ],
      "@tweet/*": [
        "src/tweet/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "ts-auto-mock/transformer",
        "cacheBetweenTests": false
      }
    ]
  },
  "include": ["src/"]
}
